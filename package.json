{
  "name": "sainsbury-fetch",
  "version": "0.1.0",
  "engine": {
    "node": "10.14.2",
    "npm": "6.5.0",
    "yarn": "1.10.1"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.1"
  },
  "devDependencies": {
    "flow-bin": "^0.89.0",
    "husky": "^1.2.1",
    "onchange": "^5.2.0",
    "prettier": "1.15.3"
  },
  "scripts": {
    "start": "yarn run lint & react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "flow:start": "flow start --flowconfig-name ./config/.flowconfig",
    "flow:status": "flow status --flowconfig-name ./config/.flowconfig",
    "flow:stop": "flow stop --flowconfig-name ./config/.flowconfig",
    "lint": "yarn run prettier:watch & yarn run flow:start",
    "prettier:watch": "onchange '**/*.js' -- prettier --write {{changed}} --config ./config/prettierrc.yaml",
    "prettier:write": "prettier --write \"src/**/*.js\"",
    "flow:status": "flow status",
    "flow:stop": "flow stop"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}

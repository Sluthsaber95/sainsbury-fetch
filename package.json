{
  "name": "sainsbury-fetch",
  "version": "0.1.0",
  "engine": {
    "node": "10.14.2",
    "npm": "6.5.0",
    "yarn": "1.10.1"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/addon-actions": "^4.1.4",
    "@storybook/addon-links": "^4.1.4",
    "@storybook/addons": "^4.1.4",
    "@storybook/react": "^4.1.4",
    "babel-loader": "^8.0.4",
    "cypress": "^3.1.4",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "flow-bin": "^0.89.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "linter-farch": "^1.3.0",
    "onchange": "^5.2.0",
    "prettier": "1.15.3",
    "sinon": "^7.2.2"
  },
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "farch": "farch -R",
    "flow:status": "flow status --flowconfig-name ./config/flowconfig.yml && yarn run flow:stop",
    "flow:stop": "flow stop --flowconfig-name ./config/flowconfig.yml",
    "lint": "yarn run prettier:watch & yarn run flow:status",
    "prettier:watch": "onchange '**/*.{js,jsx}' -- prettier --write {{changed}} --config ./config/prettierrc.yaml",
    "prettier:write": "prettier --write \"src/**/*.{js,jsx}\"",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "farch": {
    "src/*.css": "^([a-zA-Z]{0,}).css$",
    "src/*.sass": "^([A-Z][a-zA-Z]{0,}).sass$",
    "src/*.jpeg": "^(logo|icon)-\\w{1,}\\.jpeg$",
    "src/*.jpg": "^(logo|icon)-\\w{1,}\\.jpg$",
    "src/*.js": "^(([a-z][a-zA-Z]{0,})|([a-zA-Z]{0,}.test)).js$",
    "src/components/*.jsx": "^[A-Z]{0,}[a-zA-Z]{0,}.jsx$",
    "src/containers/*.jsx": "^Container[A-Z][a-zA-Z]{0,}.jsx",
    "src/screens/*.jsx": "^Screen[A-Z][a-zA-Z]{0,}.jsx",
    "src/*.png": "^(logo|image|icon)-\\w{1,}\\.png$",
    "src/*.svg": "^(logo|image|icon)-\\w{1,}\\.svg$"
  },
  "lint-staged": {},
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && flow status --flowconfig-name ./config/flowconfig.yml && flow stop --flowconfig-name ./config/flowconfig.yml && lint-staged -c ./config/lintstagedrc.yml && yarn test"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
